<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:web="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_3_1.xsd"
	version="3.1">
	<display-name>HelloWorld Application</display-name>
	<description>
		This is a simple web application with a source code
		organization
		based on the recommendations of the Application
		Developer's Guide.
	</description>

	<servlet>
		<servlet-name>listadoActores</servlet-name>
		<servlet-class>es.salesianos.servlet.ListadoServlet</servlet-class>
	</servlet>


	<servlet>
		<servlet-name>AddActorServlet</servlet-name>
		<servlet-class>es.salesianos.servlet.AddActorServlet
		</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>AddPeliculaServlet</servlet-name>
		<servlet-class>es.salesianos.servlet.AddPeliculaServlet
		</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>DeleteActorServlet</servlet-name>
		<servlet-class>es.salesianos.servlet.DeleteActorServlet
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>AddActorServlet</servlet-name>
		<url-pattern>AddActor</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>listadoActores</servlet-name>
		<url-pattern>cargarListadoActores</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>DeleteActorServlet</servlet-name>
		<url-pattern>/deleteActor</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>AddPeliculaServlet</servlet-name>
		<url-pattern>/AddPelicula</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>